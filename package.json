{
  "name": "safe-settings-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda handler for GitHub Safe Settings with Probot",
  "main": "safe-settings-handler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:local": "node local-test.js",
    "test:webhook": "node local-test.js --webhook",
    "test:scheduler": "node local-test.js --scheduler",
    "test:dev": "node test-dev-mode.js"
  },
  "dependencies": {
    "@probot/adapter-aws-lambda-serverless": "^4.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "dotenv": "^17.2.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "github",
    "safe-settings",
    "lambda",
    "probot",
    "aws"
  ],
  "author": "",
  "license": "ISC"
}
